
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(head == NULL)return nullptr;
        ListNode *prev = NULL;
        while(head->next != NULL){
            ListNode *temp = head->next;
            head->next = prev;
            prev = head;
            head = temp; 
            
        }

        head -> next = prev;
        return head; 
    }
};
